// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String? // TODO: make autogenerated like git repos names
  role     String    @default("user")
  email    String    @unique
  password String
  profiles Profile[]
  session  Session[]
}

model Session {
  id     Int    @id @default(autoincrement())
  token  String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

model Profile {
  id        Int     @id @default(autoincrement())
  name      String?
  accessKey String
  node      Node    @relation(fields: [nodeId], references: [id])
  nodeId    Int
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
}

model Node {
  id          Int       @id @default(autoincrement())
  name        String
  countryCode String
  ip          String
  key         String
  profiles    Profile[]
}
